{
    "name": "joomla/test-integration",
    "type": "project",
    "description": "Joomla CMS Integration Tests",
    "keywords": ["joomla", "cms", "tests", "integration-tests"],
    "homepage": "https://github.com/joomla/test-integration",
    "license": "GPL-2.0+",
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "5.3.10"
        }
    },
    "support": {
        "issues": "https://issues.joomla.org",
        "forum": "https://forum.joomla.org/",
        "docs": "https://docs.joomla.org"
    },
    "require": {
        "phpunit/phpunit": "^4.8.35",
        "phpunit/dbunit": "~1.3",
        "friendsofphp/php-cs-fixer": "~1.11",
        "squizlabs/php_codesniffer": "~1.5",
        "pear/cache_lite": "1.7.16"
    },
    "scripts": {
        "post-package-update": [
            "php -r \"copy(__DIR__ . '/src/phpunit.xml.dist', getcwd() . '/phpunit.xml.dist');\""
        ]
    }
}
